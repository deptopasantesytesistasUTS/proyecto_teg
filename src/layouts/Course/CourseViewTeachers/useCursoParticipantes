import { useState, useEffect } from "react";

function useCursoParticipantes(cursoId) {
  const [students, setStudents] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    if (!cursoId) return;
    setLoading(true);
    fetch(`http://localhost:3003/api/cursos/${cursoId}/participantes`)
      .then(res => res.json())
      .then(data => {
        setStudents(data.students || []);
        setLoading(false);
      })
      .catch(() => setLoading(false));
  }, [cursoId]);

  return { students, loading };
}

export default useCursoParticipantes;